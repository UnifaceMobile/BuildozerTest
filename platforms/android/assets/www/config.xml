<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.uniface.client.previewer"
        version   = "1.0.4"
		android-versionCode=""
		ios-CFBundleVersion=""
        >

    <name>Previewer</name> 
    <description>This is a scanner app from Uniface for testing and debugging purpose</description>
    <author href="http://www.uniface.com" email="Mobile@uniface.com">Uniface Mobile Team</author>

	<!-- For more information about preferences see: -->
	<!-- http://docs.build.phonegap.com/en_US/3.3.0/configuring_preferences.md.html#Preferences -->
    <!--  Multi-Platform -->
    <preference name="phonegap-version"      		value="4.1.2" />
    <preference name="orientation"           		value="default" />
	<preference name="fullscreen"             		value="false" />
	
	<!--  iOS Only -->
	<preference name="DisallowOverscroll"           value="true" />
    <preference name="target-device"				value="universal" />
	<preference name="prerendered-icon"    			value="false" />
	<preference name="detect-data-types"    		value="false" />
	<preference name="exit-on-suspend"    			value="false" />
	<preference name="deployment-target"    		value="7" />
	<preference name="AutoHideSplashScreen" 		value="false" />
	<preference name="BackupWebStorage"             value="local"/>

	<!--  Android Only -->
	<preference name="android-installLocation"    	value="auto" />
	<preference name="android-windowSoftInputMode"	value="stateVisible|adjustResize" />
	<preference name="SplashScreen" 				value="splash" />
	<preference name="SplashScreenDelay"    		value="3000" />

	<!-- The access element provides your app with access to resources on other domains   -->
	<!-- http://docs.build.phonegap.com/en_US/3.3.0/configuring_access_elements.md.html#Access%20Elements -->
    <access origin="*" subdomains="true" />
	
	<plugin name="cordova-plugin-whitelist" version="1" />
	<allow-intent href="*" />	
	<allow-navigation href="*" />	
		
	<!--  Target DSP (Main DSP)-->
	<content src="index.html" />

	
	<gap:plugin name="org.apache.cordova.statusbar" />

    <icon src="icon.png" />
    <icon src="www/res/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="www/res/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="www/res/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="www/res/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
	
	
